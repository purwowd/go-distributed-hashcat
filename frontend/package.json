{
  "name": "hashcat-dashboard",
  "version": "1.0.0",
  "description": "Distributed Hashcat Dashboard - Production-Ready Frontend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --port 3000",
    "build": "tsc && vite build",
    "build:prod": "NODE_ENV=production tsc && vite build --mode production",
    "preview": "vite preview --port 3000",
    "clean": "rm -rf dist/ .vite/",
    "lint": "eslint src --ext ts,js --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,js --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,js,css,html}\"",
    "test": "echo \"No tests yet\" && exit 0",
    "serve:prod": "serve -s dist -l 3000"
  },
  "dependencies": {
    "alpinejs": "^3.13.3"
  },
  "devDependencies": {
    "@types/node": "^20.19.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^35.0.0",
    "tailwindcss": "^3.4.0",
    "terser": "^5.43.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "keywords": [
    "hashcat",
    "distributed",
    "dashboard",
    "alpine.js",
    "tailwindcss",
    "vite",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/go-distributed-hashcat"
  }
}
