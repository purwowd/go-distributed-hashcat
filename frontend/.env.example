# Environment Configuration for Distributed Hashcat Frontend

# API Configuration
VITE_API_BASE_URL=http://172.15.1.140:1337

# Development Configuration
VITE_DEV_PORT=3000
VITE_DEV_HOST=true

# Build Configuration
VITE_APP_VERSION=1.0.0
VITE_BUILD_TIME=

